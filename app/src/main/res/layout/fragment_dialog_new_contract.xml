<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/title_contract_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    <TextView
        android:id="@+id/description_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contract Description"
        android:textSize="10sp"
        />

    <EditText
        android:id="@+id/name_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name of your project (ex. Fishing Boat)"
        />

        <EditText
            android:id="@+id/location_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Location"
            />

        <EditText
            android:id="@+id/description_project"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:text="Project description: Describe here why you think your project is likely to be successful and why you think it's a good idea for others to invest in it."
            />



        <Button
            android:id="@+id/button_contract_1_next"
            style="@style/MyButton"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:text="@string/next_step"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />




    </android.support.constraint.ConstraintLayout>

