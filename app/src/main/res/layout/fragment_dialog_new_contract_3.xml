<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_contract_create"
        />


    <activity
        android:name=".fragment_dialog_new_contract_3">
        <intent-filter>
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <TextView
        android:id="@+id/title_contract_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="How much do you expect to make?"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
      />

    <TextView
        android:id="@+id/description_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Description of what needs to be done."
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:id="@+id/funding_goal"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter the amount of funding you are requesting"
         />

    <EditText
        android:id="@+id/expected_profit"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="48dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter a low estimate of the total expected profit"
        />

    <EditText
        android:id="@+id/expected_profit_high"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter a high estimate of the total expected profit"
       />


    <TextView
        android:id="@+id/label_profit_share_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:text="@string/label_profit_share_percentage"
        android:textSize="18sp"
       />

    <TextView
        android:id="@+id/investor_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="420dp"
        android:text="%"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/mudarib_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="420dp"
        android:text="%"
        android:textSize="24sp" />


    <SeekBar
        android:id="@+id/seek_bar_profit_share_percentage"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true"
       />


    <Button
        android:id="@+id/button_contract_3_next"
        style="@style/MyButton"
        android:layout_width="282dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp"
        android:layout_marginTop="550dp"
        android:text="@string/next_step"
         />



</RelativeLayout>